<body>
  <div class="row first">
    <table class="dataTable">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Author</th>
          <th>Body</th>
        </tr>
      </thead>

      <tbody>
        <% @scroll_tests.each do |scroll_test| %>
          <%= form_for(scroll_test) do |f| %>
          <tr>
            <td><%= scroll_test.id %></td>
            <td class="field"><%= f.text_field :title, {:onkeyup=>"if (event.keyCode == 13) {handlerButton(#{scroll_test.id},scroll_test)}"}%></td>
            <td class="field"><%= f.text_field :author, {:onkeyup=>"if (event.keyCode == 13) {handlerButton(#{scroll_test.id},scroll_test)}"}%></td>
            <td class="field"><%= f.text_field :body, {:onkeyup=>"if (event.keyCode == 13) {handlerButton(#{scroll_test.id},scroll_test)}"}%></td>
          </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</body>